extends: default

rules:
  # Allow longer lines for GitHub Actions workflows
  line-length:
    max: 120
    level: warning

  # Allow truthy values (GitHub Actions uses 'true'/'false' strings)
  truthy:
    check-keys: false
    level: warning

  # Allow document start without ---
  document-start:
    present: false

  # Allow comments without proper spacing (GitHub Actions style)
  comments:
    min-spaces-from-content: 0
